.container
  %form.form-signin{:method => 'post', :action => '/signup'}
    %h4.form-signin-heading Signup Form for TypeBot
    - if flash[:notice]
      %p{:class => 'text-danger'}
        = flash[:notice] 
    %label{:for => "inputEmail",:class => "sr-only"} User Name
    %input{:type => "text", :id => "inputEmail", :name => 'user_name',:class => "form-control", :placeholder => "User Name", :required => 'true', :autofocus => 'true'}
    %label{:for => "inputEmail",:class => "sr-only"} Email address
    %input{:type => "email", :id => "inputEmail", :name => 'email',:class => "form-control", :placeholder => "Email address", :required => 'true', :autofocus => 'true'}
    %label{:for => "inputPassword", :class => "sr-only"} Password
    %input{:type => "password", :id => "inputPassword", :pattern => ".{5,}",:name =>'password',:class => "form-control", :placeholder => "Password", :required => 'true', :style =>'margin-bottom:-1px'}
    %label{:for => "inputPassword", :class => "sr-only"} Confirm Password
    %input{:type => "password", :id => "inputPassword", :name =>'confirm_password',:class => "form-control", :placeholder => "Confirm Password", :required => 'true'}
    %button{:class => "btn btn-lg btn-primary btn-block", :type => "submit"}Sign Up
    %a{:href => '/login',:class =>'btn btn-lg btn-success btn-block'} Already A member? Sign In
